@{
}

@model Response<TokenViewModel>

@if (Model.StatusCode == 422)
{
    <div class="card text-center">
        <div class="card-header">
        </div>
        <div class="card-body">
            <h5 class="card-title">Token Eşlenirken Hata Oluştu</h5>
            <p class="card-text">Eşlemek istenilen token pasif durumda. Lütfen farklı bir token deneyin.</p>
            <input type="button" value="Yeni Token Eşle" class="btn btn-success" onclick="location.href='@Url.Action("Update", "Member")'" />
        </div>
        <div class="card-footer text-muted">
        </div>
    </div>
}
else if (Model.StatusCode == 400)
{
    <div class="card text-center">
        <div class="card-header">
        </div>
        <div class="card-body">
            <h5 class="card-title">Token Eşlenirken Hata Oluştu</h5>
            <p class="card-text">Eşlemek istenilen tokenin Customer ID bilgisi yanlış. Lütfen Customer ID'yi kontrol edin.</p>
            <input type="button" value="Yeni Token Eşle" class="btn btn-success" onclick="location.href='@Url.Action("Update", "Member")'" />
        </div>
        <div class="card-footer text-muted">
        </div>
    </div>
}else if(Model.StatusCode == 404){
    <div class="card text-center">
        <div class="card-header">
        </div>
        <div class="card-body">
            <h5 class="card-title">Token Eşlenirken Hata Oluştu</h5>
            <p class="card-text">Eşlemek istenilen token bulunamadı. Lütfen tokeni kontrol edin.</p>
            <input type="button" value="Yeni Token Eşle" class="btn btn-success" onclick="location.href='@Url.Action("Update", "Member")'" />
        </div>
        <div class="card-footer text-muted">
        </div>
    </div>
}